server {
  listen      80;
  listen      [::]:80;
  root   /app/public;

  location /api {
    try_files $uri $uri/ /index.php?$query_string;
  }

  location / {
    index   index.html;
  }
  location /graphql {
    proxy_pass http://backweb;
  }
}
upstream backweb {
  server ${BACKEND} weight=5 max_fails=3 fail_timeout=30s;
  keepalive 16;
}
